@import "nib"

html
	margin: 0
	padding: 0
	height: 100%
	overflow: hidden
	background-image: linear-gradient(110deg, #000 0%, #222 30%, #060606 30%, #333 100%)
	background-color: #191919
	background-position: center
	background-attachment: fixed
	background-repeat: no-repeat
	background-size: cover

body
	margin: 0
	padding: 0
	height: 100%
	display: flex
	flex-direction: column
	overflow: hidden

[data-id="swis-reflector-mirror"]
	@require "./reset"

	flex: 100 100 auto
	display: flex
	flex-direction: column
	margin: 100px
	overflow: hidden
	background-color: rgba(#fff, 0.85)
	border: 1px solid #333
	box-shadow: 0px 0px 5px 1px rgba(#333, 0.75)

// Others
@require "./toastr"


