@import "nib"

[data-id="swis-button-container"]
	position: fixed
	z-index: 9999
	bottom: 0
	height: 0
	left: 0
	right: 0
	overflow:	visible

	@require "./reset"
	@require "./Button"

div.swis-remote-cursor-container
	position: fixed
	top: 0
	bottom: 0
	left: 0
	right: 0
	padding: 0
	margin: 0
	overflow: hidden
	z-index: 2147483646
	pointer-events: none

	div.swis-remote-cursor
		size = 250px

		pointer-events: none
		position: relative
		padding: 0
		margin: 0
		margin-left: -1 * (size / 2)
		margin-top: -1 * (size / 2)
		width: size
		height: size
		background-image: url("/resources/images/remote-cursor.svg")
		background-position: center
		background-size: cover

