@import "nib"

[data-id="swis-button-container"]
	position: fixed
	z-index: 9999
	bottom: 0
	width: 100%
	height: 0
	overflow:	visible

	@require "./reset"
	@require "./Button"

div.swis-remote-cursor
	size = 50px

	pointer-events: none
	position: absolute
	z-index: 99999
	padding: 0
	margin: 0
	margin-left: -1 * (size / 2)
	margin-top: -1 * (size / 2)
	width: size
	height: size
	background-image: url("/resources/images/remote-cursor.svg")
	background-position: center
	background-size: cover

// Others
@require "./toastr"


