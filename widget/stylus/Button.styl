div.Button
	position: absolute
	bottom: 0
	right: 50px
	height: auto
	padding: 8px 20px
	width: 180px
	border-top-left-radius: 10px
	border-top-right-radius: 10px
	box-shadow: 0px -1px 5px 1px rgba(#333, 0.2)
	background-color: rgba(#006694, 0.9)
	user-select: none
	cursor: pointer
	transition-duration: 0.1s

	&:hover
		background-color: rgba(#0a7493, 1)

	&.input
		width: 220px
		cursor: default

	&.running
		background-color: rgba(#ff6666, 0.85)

		&:hover
			background-color: rgba(#ff6666, 1)

	> p
		text-align: center
		font-family: Helvetica, monospace
		font-size: 25px
		color: #fff

	> form
		width: 100%

		> input[type="text"]
			display: block
			width: 100%
			height: 25px
			margin: 10px auto 0 auto
			padding: 5px
			background-color: rgba(#000, 0.1)
			border: 1px solid rgba(#fff, 0.7)
			border-radius: 5px
			font-family: Helvetica, monospace
			font-size: 14px
			color: #fff
			text-align: center

			&:focus
				outline: none

		> input[type="submit"]
			display: block
			width: 100px
			height: 25px
			margin: 10px auto 5px auto
			padding: 5px
			background-color: rgba(#000, 0.75)
			border: none
			border-radius: 2px
			font-family: Helvetica, monospace
			font-size: 12px
			color: #fff
			text-align: center

