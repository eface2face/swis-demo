div.Button
	position: absolute
	bottom: 0
	right: 50px
	height: auto
	padding: 8px 0
	width: 200px
	border-top-left-radius: 10px
	border-top-right-radius: 10px
	// box-shadow: 0px -2px 5px 1px rgba(#333, 0.75)
	box-shadow: 0px -1px 5px 1px rgba(#fff, 0.5)
	background-color: rgba(#006694, 0.85)
	user-select: none
	cursor: pointer
	transition-duration: 0.15s

	&:hover
		padding: 12px 0
		background-color: rgba(#006694, 1)

	&.running
		background-color: rgba(#ff6666, 0.85)

		&:hover
			background-color: rgba(#ff6666, 1)

	> p
		font-family: Helvetica, monospace
		font-size: 25px
		color: #fff
		text-align: center
